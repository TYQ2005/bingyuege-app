<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bingyuege.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>冰阅阁</name>
  <description>一款多功能阅读APP，支持书源导入与交互阅读</description>
  <author email="catgopii@gmail.com" href="https://github.com/TYQ2005">冰阅阁开发团队</author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <icon density="ldpi" src="www/assets/icons/android/icon-36-ldpi.png" />
    <icon density="mdpi" src="www/assets/icons/android/icon-48-mdpi.png" />
    <icon density="hdpi" src="www/assets/icons/android/icon-72-hdpi.png" />
    <icon density="xhdpi" src="www/assets/icons/android/icon-96-xhdpi.png" />
    <icon density="xxhdpi" src="www/assets/icons/android/icon-144-xxhdpi.png" />
    <icon density="xxxhdpi" src="www/assets/icons/android/icon-192-xxxhdpi.png" />
  </platform>
</widget>
